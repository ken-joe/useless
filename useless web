      border-radius: 50%;
      transition: transform 0.3s;
    }

    .toggle-switch.active {
      background: #4ade80;
    }

    .toggle-switch.active::before {
      transform: translateX(20px);
    }

    .btn {
      margin-top: 20px;
      background: #5a189a;
